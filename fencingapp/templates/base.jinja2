{% extends 'bootstrap/base.html' %}

{% block title %}
  {% if title %} {{ title }} - Fencing Manager{% else %}Welcome to Fencing Manager 
  {% endif %}
{% endblock %} 

{% block navbar %}
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>  
        <a class="navbar-brand" href="{{ url_for('main.tournament') }}">Fencing Manager</a>
      </div>    
      <div>
        <li class="btn"><a href="{{ url_for('main.tournament') }}">Tournaments</a></li>
        <li class="btn"><a href="{{ url_for('main.USFA') }}">USFA Members</a></li>
        {% if current_user.username %}
          <li class="btn"><a href="{{ url_for('main.user', username=current_user.username) }}">{{current_user.username}}'s Stats</a></li>
          <li class="btn"><a href="{{ url_for('main.club') }}">My Club Members</a></li>
          <li class="btn"><a href="{{url_for('auth.logout')}}">Logout</a>
        {% else %}
          <li class="btn"><a href="{{url_for('auth.login')}}">Login</a>

        {% endif %}
      </div>
    </div>
  </nav>
{% endblock %}


{% block content %}
  <div class="container">
      {% with messages = get_flashed_messages() %}
        {% if messages %}
          {% for message in messages %}
            <div class="alert alert-info" role="alert">{{ message }}</div>
          {% endfor %}
        {% endif %}
      {% endwith %}


 {# /* page app_content inserted here */ #}
      {% block app_content %}{% endblock %}
  </div>
{% endblock %}
